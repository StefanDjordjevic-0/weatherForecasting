<%- include('partials/header.ejs') %>
        <% if (error !== 404){ %>
            <div class="searchCard">
                <div class="weatherCarFlex">
                    <div class="first">
                     <h1><%= data.name %>, <%= data.sys.country %></h1>
                     <img class="weatherIcon" src="http://openweathermap.org/img/w/<%= data.weather[0].icon%>.png">
                     </div>
                     <div class="second">
                    <p class="description">Weather: <%= data.weather[0].description%></p>
                    </div>
                    <div class="third">
                    <p class="temperature"><%= parseInt(data.main.temp)%> 
                    <img class="celsius"src="/images/celsius.png"></p>
                    </div>
                </div>
                <% }else{ %>
                    <script>
                        alert("Location not found!");
                    </script>
                <% } %>
    </div>


